import java.util.Scanner;

public class Mainee {

    public void display(int[] arr)
    {
        for(int i:arr)
        {
            System.out.print("| "+i+" |");
        }
        System.out.println(" ");
    }

    public void merge(int []arr) // waht i did here is i am just providing variables to sort
    {
        int left=0;
        int right=arr.length-1;
        sort(left,right,arr);

    }

    public static void sort(int left, int right, int[] arr)// in sort what is happening is that i am using all the variables and arr to find mid,left,right;
    {
        if(left<right)
        {
            int mid=(left+right)/2;

            sort(left,mid,arr);
            sort(mid+1,right,arr); 
            mergesort(arr,left,mid,right);
        }
    }

    public static void mergesort(int[]arr,int left,int mid,int right)// here is what the actual merge sort is happening;
    {
        int leftsize=mid-left+1;
        int leftArr[]=new int[leftsize];// left would be left minus right   
    
        int rightsize=right-mid;
        int rightArr[]=new int[rightsize];// here is what right minus (mid+1)

        for(int i=0;i<leftsize;i++)// copying left code to left arr after breaking
        {
            leftArr[i]=leftArr[i+left];
        }

        for(int i=0;i<rightsize;i++)// copying right split after breaking
        {
            rightArr[i]=rightArr[mid-right+1];
        }

        int i=0; 
        int j=0;
        int k=left;
        while(i<leftsize && j<rightsize)
        {
            if(leftArr[i]<=rightArr[j])
            {
                arr[k]=leftArr[j];
                i++;
            }
            else
            {
                arr[k]=rightArr[j];
                j++;
            }
            k++;
                  // Copy remaining elements of leftArr
        while (i < leftsize) {
            arr[k] = leftArr[i];
            i++;
            k++;
        }

        // Copy remaining elements of rightArr
        while (j < rightsize) {
            arr[k] = rightArr[j];
            j++;
            k++;
        }
    }



    }

    public static void main(String[] args) {
      
        System.out.println("enter array size");
        Scanner scan= new Scanner(System.in);

        int size=scan.nextInt();
        int arr[]=new int[size];

        System.out.print("enter array elements");
        for(int i=0;i<=size-1;i++)
        {
            arr[i]=scan.nextInt();
        }
        
        Mainee obj = new Mainee();
        obj.display(arr);
        obj.merge(arr);


        scan.close();
    }
    
}