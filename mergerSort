import java.util.Scanner;

public class Mainee {

    public void display(int[] arr)
    {
        for(int i:arr)
        {
            System.out.print("| "+i+" |");
        }
        System.out.println(" ");
    }

    public int merge(int []arr) // waht i did here is i am just providing variables to sort
    {
        int left=0;
        int right=arr.lenght;
        sort(left,right,arr);

    }

    public static void sort(int left, int right, int[] arr)// in sort what is happening is that i am using all the variables and arr to find mid,left,right;
    {
        if(left<right)
        {
            int mid=(left+right)/2;

            sort(left,mid,arr);
            sort(mid+1,right,arr); 
            mergesort(arr,left,mid,right);
        }
    }

    public static void mergesort(int[]arr,int left,int mid,int right)// here is what the actual merge sort is happening;
    {
        int leftArr[]=new int[mid-left];// left would be left minus right   
    
        int rightArr[]=new int[right-mid+1];// here is what right minus (mid+1)

        for(int i=0;i<leftArr.lenght;i++)
        {
            leftArr[i]=leftArr[i+left];
        }

        for(int i=0;i<rightArr.lenght;i++)
        {
            rightArr[i]=rightArr[left-right+1];
        }

        int i=0; 
        int j=0;
        int k=0;
        


    }

    public static void main(String[] args) {
      
        System.out.println("enter array size");
        Scanner scan= new Scanner(System.in);

        int size=scan.nextInt();
        int arr[]=new int[size];

        System.out.print("enter array elements");
        for(int i=0;i<=size-1;i++)
        {
            arr[i]=scan.nextInt();
        }
        
        Mainee obj = new Mainee();
        obj.display(arr);
        obj.merge(arr);


        scan.close();
    }
    
}
